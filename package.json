{
  "name": "novora-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency=15",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:admin": "turbo run dev --filter=@novora/admin",
    "start:core": "turbo run dev --filter=@novora/core",
    "start:pro": "turbo run dev --filter=@novora/pro",
    "start:enterprise": "turbo run dev --filter=@novora/enterprise",
    "start:home": "turbo run dev --filter=@novora/home",
    "start:survey": "turbo run dev --filter=@novora/survey",
    "start:api": "turbo run dev --filter=@novora/api"
  },
  "dependencies": {
    "@fastify/http-proxy": "^11.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.2",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@mui/x-date-pickers": "^8.4.0",
    "@prisma/client": "^5.10.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.17.19",
    "@types/styled-components": "^5.1.34",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "crypto": "^1.0.1",
    "csurf": "^1.11.0",
    "date-fns": "^3.6.0",
    "express-rate-limit": "^7.5.0",
    "fastify": "^4.26.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.330.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.56.4",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.1",
    "react-toastify": "^11.0.5",
    "sonner": "^1.4.0",
    "stripe": "^14.17.0",
    "styled-components": "^6.1.8",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "zod": "^3.25.28"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.4"
}
