# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application
ENVIRONMENT=production
DEBUG=false
APP_NAME=Novora Survey Platform
VERSION=1.0.0

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=novora
POSTGRES_USER=novora_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password_here

# Celery Configuration
CELERY_BROKER_URL=redis://:your_secure_redis_password_here@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:your_secure_redis_password_here@localhost:6379/2

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-production-key-change-this-immediately
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (Update with your actual frontend domain)
BACKEND_CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=novora

# Auto-Pilot Configuration
AUTO_PILOT_CHECK_INTERVAL=300
AUTO_PILOT_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/novora.log

# Performance
WORKER_CONCURRENCY=4
MAX_CONNECTIONS=100
