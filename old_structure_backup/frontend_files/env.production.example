# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application
VITE_APP_ENVIRONMENT=production
VITE_APP_DEBUG=false
VITE_LOG_LEVEL=warn

# API Configuration
VITE_API_BASE_URL=https://api.novora.com
VITE_API_VERSION=v1

# Feature Flags
VITE_FEATURE_AUTO_PILOT=true
VITE_FEATURE_ADVANCED_ANALYTICS=true
VITE_FEATURE_SSO=true
VITE_FEATURE_API_KEYS=true
VITE_FEATURE_WEBHOOKS=true
VITE_FEATURE_REAL_TIME_UPDATES=true

# Production Settings
VITE_DEV_PROXY=false
VITE_DEV_HOT_RELOAD=false
VITE_DEV_SOURCE_MAPS=false

# External Services (Production)
VITE_ANALYTICS_URL=https://analytics.novora.com
VITE_MONITORING_URL=https://monitoring.novora.com
VITE_SUPPORT_URL=https://support.novora.com

# Security (Production)
VITE_ENABLE_HTTPS=true
VITE_ENABLE_CORS=false
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=3

# Performance
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true
VITE_ENABLE_PWA=true
