{
  "name": "@novora/shared",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:unit": "vitest src/__tests__/unit",
    "test:integration": "vitest src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run",
    "test:watch": "vitest watch",
    "test:update": "vitest -u",
    "test:debug": "vitest --inspect-brk",
    "test:ui": "vitest --ui",
    "test:report": "vitest run --reporter=html",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "migrate:dev": "ts-node prisma/migrate.ts --environment development",
    "migrate:staging": "ts-node prisma/migrate.ts --environment staging",
    "migrate:prod": "ts-node prisma/migrate.ts --environment production",
    "seed:dev": "ts-node prisma/seeds/index.ts",
    "seed:staging": "ts-node prisma/seeds/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "security:audit": "ts-node scripts/security-audit.ts",
    "security:fix": "npm audit fix",
    "security:check": "snyk test",
    "security:monitor": "snyk monitor"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.52.0",
    "@prisma/client": "^6.8.2",
    "@sentry/integrations": "^7.120.3",
    "@sentry/node": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/k6": "^1.0.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "k6": "^0.0.0",
    "msw": "^2.8.4",
    "rimraf": "^5.0.0",
    "snyk": "^1.1270.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "zod": "^3.22.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seeds/index.ts"
  }
}